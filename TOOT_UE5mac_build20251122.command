echo
echo




if [ ! -f "$UEPRJROOT/Source/"$TARGETNAME".Target.cs" ]; then
    echo "Error!! No c++ game main Modular-target for Editor found! .... please Generate c++ modular first...."
    echo
    echo "$0 cpp"
    echo
